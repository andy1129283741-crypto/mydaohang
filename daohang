<script>
  const input = document.getElementById('searchInput');
  input.addEventListener('keydown', function(e) {
    if (e.key === 'Enter') {
      const wd = this.value.trim();
      if (wd) {
        window.open('https://www.baidu.com/s?wd=' + encodeURIComponent(wd));
        this.value = '';
      }
    }
  });
</script>

